# SoloPilot Environment Configuration
# Copy this file to .env and configure with your actual values

# AWS Bedrock Configuration (Primary LLM)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-2
# AWS_PROFILE=your_aws_profile_name  # Alternative to access keys (recommended)

# OpenAI API Configuration (fallback LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional

# Optional: Override default Bedrock model configuration
# BEDROCK_MODEL_ID=anthropic.claude-3-5-haiku-20241022-v1:0
# BEDROCK_REGION=us-east-1

# Output Configuration
DEFAULT_OUTPUT_DIR=analysis/output
TEMP_DIR=temp

# Processing Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_IMAGE_FORMATS=png,jpg,jpeg,gif,bmp,tiff
SUPPORTED_TEXT_FORMATS=md,txt,docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/solopilot.log

# Development Configuration
DEBUG=false
ENVIRONMENT=development

# OCR Configuration
TESSERACT_CMD=tesseract  # Path to tesseract binary if custom
TESSERACT_CONFIG=--oem 3 --psm 6

# Future: Database Configuration (for when we add persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/solopilot
# REDIS_URL=redis://localhost:6379/0
