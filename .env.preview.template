# Preview/Staging Environment Variables Template
# Copy this to .env.preview and fill in the values

# === Vercel Configuration ===
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Preview domain configuration
VERCEL_CUSTOM_DOMAIN=preview.solopilot.ai
VERCEL_ADDITIONAL_DOMAINS=staging.solopilot.ai

# === Application Configuration ===
NODE_ENV=preview
NEXT_PUBLIC_API_URL=https://api-preview.solopilot.ai
NEXT_PUBLIC_APP_URL=https://preview.solopilot.ai

# === AWS Configuration (Staging) ===
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Bedrock Configuration
BEDROCK_REGION=us-east-2
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-haiku-20241022-v1:0

# DynamoDB Configuration (Staging tables)
DYNAMO_TABLE_CONVERSATIONS=solopilot-conversations-staging
DYNAMO_TABLE_PROJECTS=solopilot-projects-staging

# SQS Configuration (Staging queue)
REQUIREMENT_QUEUE_URL=https://sqs.us-east-2.amazonaws.com/your-account/solopilot-requirements-staging

# === Database Configuration (Staging) ===
DATABASE_URL=postgresql://user:password@host:5432/solopilot_staging
DATABASE_POOL_SIZE=5

# === Authentication ===
NEXTAUTH_URL=https://preview.solopilot.ai
NEXTAUTH_SECRET=generate_different_secret_for_staging

# === Feature Flags (Testing new features) ===
ENABLE_EMAIL_INTAKE=true
ENABLE_AI_REVIEWER=true
ENABLE_AUTO_DEPLOYMENT=false
ENABLE_EXPERIMENTAL_FEATURES=true

# === Debugging ===
LOG_LEVEL=debug
DEBUG_MODE=true

# === Performance (Less aggressive for testing) ===
RATE_LIMIT_PER_MINUTE=120
CACHE_TTL_SECONDS=600