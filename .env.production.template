# Production Environment Variables Template
# Copy this to .env.production and fill in the values

# === Vercel Configuration ===
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Custom domain configuration
VERCEL_CUSTOM_DOMAIN=solopilot.ai
VERCEL_ADDITIONAL_DOMAINS=www.solopilot.ai,app.solopilot.ai

# === Application Configuration ===
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.solopilot.ai
NEXT_PUBLIC_APP_URL=https://solopilot.ai

# === AWS Configuration ===
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Bedrock Configuration
BEDROCK_REGION=us-east-2
BEDROCK_MODEL_ID=us.anthropic.claude-3-7-sonnet-20250219-v1:0

# SES Configuration
SES_SENDER_EMAIL=noreply@solopilot.ai
SES_REGION=us-east-1

# DynamoDB Configuration
DYNAMO_TABLE_CONVERSATIONS=solopilot-conversations-prod
DYNAMO_TABLE_PROJECTS=solopilot-projects-prod

# SQS Configuration
REQUIREMENT_QUEUE_URL=https://sqs.us-east-2.amazonaws.com/your-account/solopilot-requirements-prod

# === Database Configuration ===
DATABASE_URL=postgresql://user:password@host:5432/solopilot_prod
DATABASE_POOL_SIZE=10

# === Authentication ===
NEXTAUTH_URL=https://solopilot.ai
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# OAuth Providers (if needed)
GITHUB_CLIENT_ID=your_github_oauth_app_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_secret

# === Monitoring & Analytics ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# === Feature Flags ===
ENABLE_EMAIL_INTAKE=true
ENABLE_AI_REVIEWER=true
ENABLE_AUTO_DEPLOYMENT=true

# === Security ===
RATE_LIMIT_PER_MINUTE=60
ALLOWED_ORIGINS=https://solopilot.ai,https://www.solopilot.ai
CORS_MAX_AGE=86400

# === Third-party Services ===
# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_live_xxxxx
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Context7 MCP
CONTEXT7_API_KEY=your_context7_api_key

# Notion API (if using)
NOTION_API_KEY=your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id

# === Caching ===
REDIS_URL=redis://user:password@redis-host:6379
CACHE_TTL_SECONDS=3600

# === Logging ===
LOG_LEVEL=info
LOG_FORMAT=json

# === Performance ===
# Vercel-specific optimizations
ANALYZE=false
NEXT_TELEMETRY_DISABLED=1